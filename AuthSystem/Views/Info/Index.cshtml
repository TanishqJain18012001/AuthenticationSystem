@model List<info>

@{
    ViewData["Title"] = "List Of Profiles";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-4">
                <h1 class="text-primary">List of Profiles</h1>
            </div>
            <hr />
            <div class="table-responsive">
                <table class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>URL</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var info in Model)
                        {
                            <tr>
                                <td>@info.Title</td>
                                <td><a href="@info.Url" target="_blank">@info.Url</a></td>
                                <td>
                                    <a href="@Url.Action("Edit", "Info", new { id = info.id })" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Info", new { id = info.id })" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <a class="btn btn-outline-info form-control b"
                   asp-action="Create"
                   style="background-color: #007bff;
              color: #fff;
              border: 2px solid #007bff;
              border-radius: 5px;
              transition: all 0.3s ease;
              text-decoration: none;
              display: inline-block;
              width:30%;
              padding: 8px 20px;"
                   onmouseover="this.style.backgroundColor='#0056b3'; this.style.transform='scale(1.05)';"
                   onmouseout="this.style.backgroundColor='#007bff'; this.style.transform='scale(1)';">
                    <i class="bi bi-plus-square-fill"></i> Add Profile
                </a>
            </div>


        </div>
    </div>
</div>
